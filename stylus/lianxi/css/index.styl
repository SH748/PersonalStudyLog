body{
    display: flex
    width: 100vw
    justify-items: center
    align-content: center
    .app{
        display: flex
        max-width 760px
        width 100%
        height 100%
        footer{
            position fixed
            left 0
            bottom 0
            width: 100%
            height: 50px
            div{
                display: flex
                width: 100%
                a{
                    display: flex
                    flex 1
                    flex-direction: column
                    justify-content: center
                    align-content: center
                    text-align: center
                    &:active{
                        color: #02a774
                    }
                }
            }            
        }
    }
}