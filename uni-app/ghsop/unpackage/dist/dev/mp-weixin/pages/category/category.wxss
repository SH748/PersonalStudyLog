.containter {
  width: 100%;
  height: 100%;
}
.containter .header {
  width: 100%;
  padding: 10rpx 0;
}
.containter .header .search {
  width: 80%;
  margin: 0 auto;
  background-color: #eee;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.containter .content {
  height: calc(100vh - 80rpx);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
  width: 100vw;
}
.containter .content .left-nav {
  box-sizing: border-box;
  height: 100%;
  border: 1rpx solid #eee;
  width: 20%;
}
.containter .content .left-nav .scoll-view {
  height: 100%;
  font-size: 30rpx;
}
.containter .content .left-nav .scoll-view .category-item {
  text-align: center;
  line-height: 80rpx;
  position: relative;
}
.containter .content .left-nav .scoll-view .category-item.active::before {
  content: "";
  height: 50rpx;
  position: absolute;
  top: 15rpx;
  left: 6rpx;
  border-right: 3rpx solid red;
}
.containter .content .right-content {
  height: 100%;
  width: 80%;
}
.containter .content .right-content image {
  display: block;
  width: 520rpx;
  height: 190rpx;
  margin: 20rpx auto;
}
.containter .content .right-content .subCateList {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.containter .content .right-content .subCateList .subcate-item {
  width: 33.33%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  text-align: center;
}
.containter .content .right-content .subCateList .subcate-item image {
  width: 160rpx;
  height: 144rpx;
  display: block;
  margin: 0 auto;
}
.containter .content .right-content .subCateList .subcate-item text {
  font-size: 26rpx;
}

