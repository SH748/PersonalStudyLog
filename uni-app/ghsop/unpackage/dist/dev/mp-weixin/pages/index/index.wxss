.content {
  width: 100%;
}
.content .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 62rpx;
  margin-top: 20rpx;
  padding: 0 10rpx;
}
.content .header image {
  width: 128rpx;
  height: 40rpx;
  margin: 0 20rpx;
}
.content .header .search {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #eaeaea;
  border-radius: 10rpx;
  padding: 0 0 0 20rpx;
  box-sizing: border-box;
}
.content .header .search input {
  height: 100%;
  width: 332rpx;
  min-height: 1.4rem;
  font-size: 24rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.content .header .search input .searchPlaceHolder {
  text-align: center;
  font-size: 24rpx;
  text-indent: -60rpx;
}
.content .header button {
  width: 144rpx;
  font-size: 24rpx;
  height: 60rpx;
  color: #ED4C67;
}
.content .scroll-nav {
  white-space: nowrap;
}
.content .scroll-nav .scroll-item {
  padding: 0 30rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  display: inline-block;
  font-size: 28rpx;
}
.content .scroll-nav .scroll-item.active {
  margin: 0 10rpx;
  border-bottom: 1rpx solid #ED4C67;
}
.content .recommendScroll {
  height: calc(100vh - 160rpx);
}

